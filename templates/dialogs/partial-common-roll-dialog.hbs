{{#if skill}}
<div class="flexrow">
  <span class="roll-dialog-label">{{skill.name}} : </span>
  <span class="roll-dialog-label">{{skill.system.level}}</span>
</div>
<div class="flexrow">
  <span class="roll-dialog-label">Specialties : </span>
  <span class="roll-dialog-label">{{skill.system.specialties}}</span>
</div>
<div class="flexrow">
  <span class="roll-dialog-label">Apply Specialty bonus (+5) ? : </span>
  <label class="roll-dialog-label checkbox"><input type="checkbox" id="use-specialty" name="useSpecialty" {{checked useSpecialty}}/></label>
</div>
{{/if}}

<div class="flexrow">
  <span class="roll-dialog-label">Lake Modifier : </span>
  <select id="roll-lake-modifier" name="lakeModifier">
    {{#select lakeModifier}}
    <option value="-4">-4 Dice</option>
    <option value="-3">-3 Dice</option>
    <option value="-2">-2 Dice</option>
    <option value="-1">-1 Dice</option>
    <option value="0">No Change</option>
    <option value="1">+1 Dice</option>
    <option value="2">+2 Dice</option>
    <option value="3">+3 Dice</option>
    <option value="4">+4 Dice</option>
    {{/select}}
  </select>
</div>
<div class="flexrow">
  <span class="roll-dialog-label">Spent Chivalrous Joss (ie positive lake modifier above) : </span>
  <label class="roll-dialog-label checkbox"><input type="checkbox" id="spent-chivalrous" name="spentChivalrous" {{checked spentChivalrous}}/></label>
</div>

<div class="flexrow">
  <span class="roll-dialog-label">Bonus/Malus : </span>
  <select id="roll-bonus-malus" name="bonusMalus">
    {{#select bonusMalus}}
    <option value="-5">-5</option>
    <option value="0">0</option>
    <option value="5">+5</option>
    {{/select}}
  </select>
</div>