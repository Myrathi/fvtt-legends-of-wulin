<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="item-sheet-img" src="{{img}}" data-edit="img" title="{{name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{name}}" placeholder="Name" /></h1>
    </div>
  </header>

  {{> systems/fvtt-legends-of-wulin/templates/items/partial-item-nav.hbs}}


  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{> systems/fvtt-legends-of-wulin/templates/items/partial-item-description.hbs}}

    <div class="tab details" data-group="primary" data-tab="details">

      <div class="tab" data-group="primary">
        <ul>

          <li class="flexrow">
            <label class="item-name-label-long">Family</label>
            <select class="item-field-label-medium weapon-family-selector" type="text" name="system.family" value="{{system.family}}"
              data-dtype="String">
              {{#select system.family}}
              {{#each config.weaponFamilies as |family key| }}
              <option value="{{key}}">{{family.name}}</option>
              {{/each}}
              {{/select}}
            </select>
          </li>

          <li class="flexrow">
            <label class="item-name-label-long">Strike bonus</label>
            <input type="text" class="item-field-label-short weapon-strike-bonus" name="system.strikebonus" value="{{system.strikebonus}}"
              data-dtype="Number" />
          </li>

          <li class="flexrow">
            <label class="item-name-label-long">Damage bonus</label>
            <input type="text" class="item-field-label-short weapon-damage-bonus" name="system.damagebonus" value="{{system.damagebonus}}"
              data-dtype="Number" />
          </li>

          <li class="flexrow">
            <label class="item-name-label-long">Block bonus</label>
            <input type="text" class="item-field-label-short weapon-block-bonus" name="system.blockbonus" value="{{system.blockbonus}}"
              data-dtype="Number" />
          </li>

          <li class="flexrow">
            <label class="item-name-label-long">Speed bonus</label>
            <input type="text" class="item-field-label-short weapon-speed-bonus" name="system.speedbonus" value="{{system.speedbonus}}"
              data-dtype="Number" />
          </li>

          <li class="flexrow">
            <label class="item-name-label-long">Footwork bonus</label>
            <input type="text" class="item-field-label-short weapon-footwork-bonus" name="system.footworkbonus"
              value="{{system.footworkbonus}}" data-dtype="Number" />
          </li>

          <div class="flexrow">
            <span class="item-name-label-long">Has flood ? : </span>
            <label class="item-field-label-short checkbox"><input type="checkbox" class="weapon-flood" name="system.hasflood"
                {{checked system.hasflood}} /></label>
          </div>

          {{#each system.effects as |effect idx|}}
          <li class="flexrow">
            <label class="item-name-label-long">Effects {{add idx 1}}</label>
            <textarea rows="2" class="item-name-label-header-long2" name="system.effects[{{idx}}]" data-dtype="String" />{{effect}}</textarea>
          </li>
          {{/each}}

          <div class="flexrow">
            <span class="item-name-label-long">Equipped ? : </span>
            <label class="item-field-label-short checkbox"><input type="checkbox" name="equipped"
                {{checked equipped}} /></label>
          </div>

        </ul>
      </div>
    </div>

  </section>
</form>