<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
      <img class="item-sheet-img" src="{{img}}" data-edit="img" title="{{name}}"/>
      <div class="header-fields">
          <h1 class="charname"><input name="name" type="text" value="{{name}}" placeholder="Name"/></h1>
      </div>
  </header>
  
  {{> systems/fvtt-legends-of-wulin/templates/items/partial-item-nav.hbs}}


  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{> systems/fvtt-legends-of-wulin/templates/items/partial-item-description.hbs}}
    
    <div class="tab details" data-group="primary" data-tab="details">

      <div class="tab" data-group="primary">
        <ul>

          <li class="flexrow">
            <label class="item-name-label-long">Type</label>
            <select class="item-field-label-medium" type="text" name="system.conditiontype" value="{{system.conditiontype}}" data-dtype="String">
              {{#select system.conditiontype}}
                {{#each config.conditionType as |type key| }}
                <option value="{{key}}">{{type}}</option>
                {{/each}}
              {{/select}}
            </select> 
          </li>

          <li class="flexrow">
            <label class="item-name-label-long">Action penalty</label>
            <input type="text" class="item-field-label-short" name="system.actionpenalty" value="{{system.actionpenalty}}" data-dtype="Number"/>
          </li>
          <li class="flexrow">
            <label class="item-name-label-long">Breath penalty</label>
            <input type="text" class="item-field-label-short" name="system.breathpenalty" value="{{system.breathpenalty}}" data-dtype="Number"/>
          </li>

        </ul>
    </div>
  </div>

  </section>
</form>
